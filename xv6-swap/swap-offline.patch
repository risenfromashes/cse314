diff --git a/kernel/page.c b/kernel/page.c
new file mode 100644
index 0000000..c8a55ff
--- /dev/null
+++ b/kernel/page.c
@@ -0,0 +1,227 @@
+#include "stddef.h"
+#include "types.h"
+#include "param.h"
+#include "memlayout.h"
+#include "riscv.h"
+#include "spinlock.h"
+#include "proc.h"
+#include "defs.h"
+
+#define MAXPAGES 50
+
+enum state { FREE, ALLOCATED };
+
+struct mempage {
+	void *pa;
+	pte_t	*pte;
+	pagetable_t pagetable;
+	struct mempage *next;
+} pages[MAXPAGES];
+
+
+static struct mempage *free;
+static struct mempage *head, *tail;
+
+struct spinlock swlock;
+
+void 
+mempageinit() 
+{
+	initlock(&swlock, "sw lock");
+	head = NULL;
+	tail = NULL;
+	free = pages;
+
+	for (struct mempage *p; p < &pages[MAXPAGES]; p++) {
+		p->next = p + 1;
+	}
+
+	pages[MAXPAGES - 1].next = NULL;
+}
+
+
+/* allocate an in-memory page and map it to va
+ return 0 on success -1 on failure */
+int
+allocmempage(pagetable_t pagetable, uint64 va, int flags) 
+{
+	pte_t *pte = walk(pagetable, va, 1);
+	if (!pte) {
+		return -1;
+	}
+
+	struct mempage *p;
+
+	acquire(&swlock);
+	if (free) {
+		p = free;
+		free = free->next;
+
+		if (p->pa == NULL) {
+			// not yet allocated, allocate now
+			if ((p->pa = kalloc()) == 0) {
+				free = p;
+				release(&swlock);
+				return -1;
+			}
+		}
+	} else {
+		struct swap *s = swapalloc();
+		// need to swap out a page
+		p = head;
+		head = head->next;
+
+		swapout(s, p->pa);
+
+		int flags = PTE_FLAGS(*p->pte);
+		*(p->pte) = PA2PTE(s) | flags | PTE_S;
+		*(p->pte) &= ~(PTE_V);
+	}
+
+	/* push to the end of queue */
+	tail->next = p;
+	tail = p;
+
+	
+	*pte = PA2PTE(p->pa) | flags | PTE_V;
+	*pte &= ~(PTE_S); // not swapped out
+
+	p->pte = pte;
+	p->pagetable = pagetable;
+
+	release(&swlock);
+	return 0;
+}
+
+
+/* replace an in-memory page from swap */
+int
+replacemempage(pagetable_t pagetable, uint64 va, int flags) 
+{
+	pte_t *pte = walk(pagetable, va, 1);
+	if (!pte) {
+		return -1;
+	}
+
+	struct mempage *p;
+
+	acquire(&swlock);
+	if (free) {
+		p = free;
+		free = free->next;
+
+		if (p->pa == NULL) {
+			// not yet allocated, allocate now
+			if ((p->pa = kalloc()) == 0) {
+				free = p;
+				release(&swlock);
+				return -1;
+			}
+		}
+	} else {
+		struct swap *s = swapalloc();
+		// need to swap out a page
+		p = head;
+		head = head->next;
+
+		swapout(s, p->pa);
+
+		int flags = PTE_FLAGS(*p->pte);
+		*(p->pte) = PA2PTE(s) | flags | PTE_S;
+		*(p->pte) &= ~(PTE_V);
+	}
+
+	/* push to the end of queue */
+	tail->next = p;
+	tail = p;
+
+	
+	*pte = PA2PTE(p->pa) | flags | PTE_V;
+	*pte &= ~(PTE_S); // not swapped out
+
+	p->pte = pte;
+	p->pagetable = pagetable;
+
+	release(&swlock);
+	return 0;
+}
+
+/* free mempage struct holding pte */
+void 
+freemempage(pte_t *pte)
+{
+	int flags = PTE_FLAGS(*pte);
+	if (flags & PTE_S) {
+		panic("Trying to free swapped page");
+	}
+
+	if (!(flags & PTE_V)) {
+		panic("Trying to free invalid page");
+	}
+
+	struct mempage *prev, *p;
+	/* find the node with pte */
+	acquire(&swlock);
+	for (p = head, prev = NULL; p; p = p->next) {
+		if (p->pte == pte) {
+			if (prev) {
+				prev->next = p->next;
+			} else {
+				head = prev;
+			}
+			if (p->next == NULL) {
+				tail = prev;
+			}
+
+			p->next = free;
+			free = p;
+
+			p->pagetable = NULL;
+			p->pte = NULL;
+		}
+	}
+	release(&swlock);
+}
+
+
+/* free mempage struct holding pagetable */
+void 
+freemempages(pagetable_t pagetable)
+{
+	struct mempage *prev, *p;
+
+	acquire(&swlock);
+	/* free all the mempage with given pagetable */
+	for (p = head, prev = NULL; p; p = p->next) {
+		if (p->pte == pagetable) {
+			pte_t *pte = p->pte;
+			int flags = PTE_FLAGS(*pte);
+
+			if (flags & PTE_S) {
+				panic("Swapped out page in alive pages list");
+			}
+
+			/* unmap pagetable entry */
+			*pte = 0;
+
+			/* remove linked list node */
+			if (prev) {
+				prev->next = p->next;
+			} else {
+				head = prev;
+			}
+			if (p->next == NULL) {
+				tail = prev;
+			}
+
+			/* add to free list */
+			p->next = free;
+			free = p;
+
+			/* reset pagetable and pte */
+			p->pagetable = NULL;
+			p->pte = NULL;
+		}
+	}
+	release(&swlock);
+}
